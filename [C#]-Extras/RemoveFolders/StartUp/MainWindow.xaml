<Window x:Class="StartUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartUp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="357*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="folder" Content="Folder" HorizontalAlignment="Left" Margin="10,289,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-2.667,7.85" Click="button_Click"/>
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Grid.Column="1" HorizontalAlignment="Right" Width="357">
            <TextBlock  x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="319" Width="326" Grid.Column="1" Margin="21,0,0,0" ><Run Text="Waiting..." /></TextBlock>
        </ScrollViewer>
        <Button x:Name="delbtn" Content="Delete" HorizontalAlignment="Left" Margin="10,264,0,0" VerticalAlignment="Top" Width="75" Click="delbtn_Click"/>

    </Grid>
</Window>
