
// by definition
html, body
  font-family: Arial, Helvetica, sans-serif

#wrapper
  width: 960px
  margin 0

.clear
  clear both

font-size-def = 14px
font-size-title = 34px
font-size-menu-item = 18px
font-size-content-title = 30px
// All other pixel sizes will be
// divisible by 5 or exactly 8px.
img-header-bg = url(./images/header-bg.png)

color-header-border = #39C518
color-header-sub = #C0C0C0
color-menu-text = #CC6600
color-search = #59770E
color-content-text = #555555
color-borders = #A9A9A9
color-header = #EEFFEE

clearfix()
  &:after
    content: ""
    display: block
    clear both

*
  margin: 0
  padding 0
  font-size: font-size-def

body
  margin-left: 5px
  & div#wrapper
    & header
      background-image: img-header-bg
      height: 97px
      clearfix()
      & div#title
        float left
        margin-left: 20px
        & h1
          margin-top: 20px
          margin-bottom 3px
          color color-header
          font-size: font-size-title
        & h2
          color color-header-sub
          font-weight: normal;
      & #nav
        margin-top:45px
        margin-right: 30px
        float right
        & ul
          list-style: none
          & li
            font-weight: bold;
            margin-left: 18px
            display: inline-block;
            color color-menu-text
            font-size: font-size-menu-item
    & div#line
      border-bottom 5px solid color-header-border
    & div#content
      float left
      width: 760px
      & h1
        margin-top: 24px
        margin-bottom: 20px
        color color-search
        font-size: font-size-content-title
        letter-spacing: -0.01em
      & p
        color color-content-text
        font-size: font-size-def
        margin-bottom: 10px
    & aside#aside
      margin-top: 20px
      margin-left: 0px
      margin-bottom 10px
      color color-search
      font-weight: bold
      font-size 14px
      text-transform: uppercase;
      & hr
        margin-top: 8px
      & form
        padding-left: 0px
        & input
          margin-top: 8px
          width 155px
          border 1px solid color-borders
          height: 23px
