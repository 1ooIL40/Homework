*
  font-family: Helvetica, Arial, 'DejaVu Sans', 'Liberation Sans', Freesans, sans-serif;
  font-size: 16px
  margin: 0
  padding 0
#wrapper
  width: 960px

// colors
color-border = #808080
color-border-hover = #454545
bg-gradient()
  background: #727272;
  background: -moz-linear-gradient(top, #727272 0%, #ffffff 100%);
  background: -webkit-linear-gradient(top, #727272 0%,#ffffff 100%);
  background: linear-gradient(to bottom, #727272 0%,#ffffff 100%);

body
  & div#wrapper
    & ul.menu
      margin-left: 0px
      margin-top: 5px
      display: flex;
      & li
        display: inline-block;
        border 20px solid color-border
        width 180px
        height: 180px
        margin-left: 5px
        bg-gradient()
        text-align: center;
        & h3
          color white
          font-size: 20px
          margin-top: 5px
          margin-bottom: 5px
        & div.image-container
          overflow: hidden;
          width 120px
          height: 100px
          border-radius: 20px
          margin-left: 30px
          & img
            width: 120px
        & p.subtitle
          margin-top: 15px
        &:hover
          border-color: color-border-hover
          background: color-border
          & h3
            text-decoration: underline;
          & div.image-container
            width 140px
            height: 110px
            margin-left: 20px
            & img
              width: 140px
          & p.subtitle
            display: none
          & p.click-here
            display block
        & p.click-here
          display none
          color white
          font-size: 20px
          margin-top: 5px
