main-bg-gradient()
  background: #4ae871;
  background: -moz-linear-gradient(top, #4ae871 0%, #4ae871 45%, #f1ffbc 75%, #f1ffbc 100%);
  background: -webkit-linear-gradient(top, #4ae871 0%,#4ae871 45%,#f1ffbc 75%,#f1ffbc 100%);
  background: linear-gradient(to bottom, #4ae871 0%,#4ae871 45%,#f1ffbc 75%,#f1ffbc 100%);

btn-gradient()
  background: -moz-linear-gradient(top, #4ae871 0%, #4ae871 12%, #4de872 15%, #f1ffbc 76%, #f1ffbc 100%);
  background: -webkit-linear-gradient(top, #4ae871 0%,#4ae871 12%,#4de872 15%,#f1ffbc 76%,#f1ffbc 100%);
  background: linear-gradient(to bottom, #4ae871 0%,#4ae871 12%,#4de872 15%,#f1ffbc 76%,#f1ffbc 100%);

clearfix()
  &:after
    content: ""
    display: block;
    clear: both;

btn-style()
  height: 34px
  width: 75px
  border: 1px solid color-container-border
  border-top-left-radius: 10px
  border-top-right-radius: 10px
  background-color: transparent
  &:hover
    btn-gradient()

input-style()
  height: 34px
  width: 185px
  background-color: transparent
  border: 1px solid color-container-border
  border-top-left-radius: 10px
  border-top-right-radius: 10px
  color color-container-border
  color color-def

color-def = #2AA0BD
color-msg-border = #333333
color-container-border = #CCCCCC

*
  margin: 0
  padding: 0
  color  color-def
body
  font-size: 18px
  font-family: Arial
  margin: 0
#root
  width 610px

body
  margin-left: 8px
  & div#root
    & h1
      text-align: center;
      font-style: italic;
      margin-top 9px
      letter-spacing: -0.03em
      margin-bottom: 20px
    & div.chat-container
      main-bg-gradient()
      display: inline-block;
      height: 470px
      width: 300px
      border 1px solid color-container-border
      border-radius: 5px
      overflow hidden;
      padding 15px 0px 15px 0px
      & h2
        text-align: center;
        font-size: 20px
        margin-top: 8px
        margin-bottom: 40px
        font-size: 28px
        letter-spacing: -0.01em
      & div.messages
        & ul
          padding 0px 15px 0px 15px
          height: 370px
          & li
            width: 270px
            list-style: none
            border-top: 1px solid color-msg-border
            word-break: break-all;
            margin-bottom: 5px
            &.me
              text-align: left;
            &.other
              text-align: right;
            &:first-child
              border-top: none
            & strong
              display: list-item;
              font-style: italic;
              list-style: none;
              font-weight: normal;
            & span
              display: list-item;
              list-style: none
    & div#me div.sent-message
      margin-left: 5px
      & input
        padding-left: 15px
        input-style()
      & button
        margin-left: 5px
        btn-style()
    & div#other div.sent-message
      margin-left: 5px
      & input
        padding-left: 15px
        input-style()
      & button
        margin-left: 5px
        btn-style()
