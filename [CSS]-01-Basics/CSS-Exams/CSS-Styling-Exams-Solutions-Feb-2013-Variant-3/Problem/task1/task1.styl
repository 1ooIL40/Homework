btn-hover-color = #00DDB3
font-color = #0094FF
bg-color = #AAFFEF

me-icn = url(./imgs/me.png)
other-icn = url(./imgs/male.png)

clearfix()
  &:after
    content ""
    display block
    clear both

default()
  width 960px
  font-family: Cambria, 'Palatino Linotype', 'Book Antiqua', 'URW Palladio L', serif
  font-size: 18px
  
btn-gradient()
  background: #aaffef;
  background: -moz-linear-gradient(top, #aaffef 0%, #aaffef 17%, #a6ffee 21%, #13ffd2 100%);
  background: -webkit-linear-gradient(top, #aaffef 0%,#aaffef 17%,#a6ffee 21%,#13ffd2 100%);
  background: linear-gradient(to bottom, #aaffef 0%,#aaffef 17%,#a6ffee 21%,#13ffd2 100%);  

shadow()
  -webkit-box-shadow: 0px -4px 0px 0px rgba(170,255,239,1);
  -moz-box-shadow: 0px -4px 0px 0px rgba(170,255,239,1);
  box-shadow: 0px -4px 0px 0px rgba(170,255,239,1);

*
  margin 0
  padding 0
  body
    default()
    margin 40px 50px
    
    div#wrapper
      height 300px
      width 520px
      
      ul.msg-bar
        position fixed
        top 205px
        
        > li
          btn-gradient()
          display inline-block
          border 1px solid black
          width 90px
          padding 5px 12px
          letter-spacing: 0.05em
          
          &:hover
            shadow()
            border-top none
            background: btn-hover-color
            
          &:hover > div.msg-bar-content
            display block
              
          > a
            text-decoration: none
            color font-color
            
          > div.msg-bar-content
            display none
            position absolute
            top -161px
            left 0px
            width 430px
            height 137px
            border 1px solid black
            border-top-left-radius: 15px
            border-top-right-radius: 15px
            border-bottom none
            background bg-color
            padding 10px 15px
            
            ul
              list-style none
              color font-color
              
              li
              clearfix()
              
              span
                display inline-block
                float right
                clear right 
                border-bottom 1px solid black
                padding-right 15px
                line-height: 30px
                letter-spacing 0.02em
                width 315px
                text-align right 
              
              span.user
                display  inline-block
                float left
                clear left
                border 1px solid black
                border-radius: 20px
                // width 45px
                height: 30px
                margin-bottom 5px
                padding-left 25px
                padding-top 0px
              
                
              li.me-item
                span.user
                  background-image me-icn
                  background-repeat no-repeat
                  background-position-x: 5px
                  background-position-y: 7px
                  padding-right 15px
                  width 30px
                  
              li.other-item
                span.user
                  background-image other-icn
                  background-repeat no-repeat
                  background-position-x: 5px
                  background-position-y: 7px
                  padding-right 15px
                  letter-spacing 0.01em
                  text-align left
                  width 55px
                